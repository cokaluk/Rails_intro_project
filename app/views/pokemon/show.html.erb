<div class="flex flex-col items-center mx-auto">
     <h1 class="mb-5 font-bold text-2xl"><%= @pokemon.name%></h1>

     <p>
          height:
          <% if @pokemon.height > 9%>
               <%=@pokemon.height / 10%> M
          <% else %>
               <%=@pokemon.height * 10%> Cm
          <% end %>
     </p>
     <p>weight: <%= @pokemon.weight / 10%> Kg</p>

     <% if @pokemon.image.attached? %>
          <%= image_tag @pokemon.image %>
     <% end %>

     <h2 class="my-5 font-bold text-xl">Types</h2>
     <div class="grid grid-cols-6 gap-4 mx-auto">
          <% @pokemon.types.each do |type| %>
               <div class="p-3 bg-gray-400">
                    <p><%= link_to type.name, type_path(type) %></p>
               </div>
          <% end %>
     </div>

     <h2 class="my-5 font-bold text-xl">learnable moves</h2>
     <div class="grid grid-cols-6 gap-4 mx-auto">
          <% @pokemon.moves.each do |move| %>
               <div class="p-3 bg-gray-400">
                    <p><%= link_to move.name, move_path(move) %></p>
               </div>
          <% end %>
     </div>
</div>