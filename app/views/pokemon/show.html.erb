<div class="flex flex-col items-center mx-auto">
     <h1 class="mb-5 font-bold text-2xl"><%= @pokemon.name%></h1>

     <p>height: <%= @pokemon.height%></p>
     <p>weight: <%= @pokemon.weight%></p>

     <h2 class="my-5 font-bold text-xl">Types</h2>
     <% @pokemon.types.each do |type| %>
          <p><%= type.name %></p>
     <% end %>

     <h2 class="my-5 font-bold text-xl">learnable moves</h2>

     <% @pokemon.moves.each do |move| %>
          <p><%= move.name %></p>
     <% end %>
</div>