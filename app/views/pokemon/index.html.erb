<div class="grid grid-cols-6 gap-4 mx-auto">
     <%= form_with url: pokemon_index_path, method: :get, local: true, class: "bg-purple-600 col-span-6 flex items-center justify-between" do%>
               <%= label_tag :search, "Search for Pokemon"%>
               <div>
                    <%= text_field_tag :search, params[:search]%>
                    <%= submit_tag "Search", class: "bg-blue-300" %>
               </div>
     <%end%>
     <% @pokemons.each do | pokemon | %>
          <div class="p-3 bg-gray-400">
               <H2><%= link_to pokemon.name, pokemon_path(pokemon)%></H2>
               <p>height:
                    <% if pokemon.height > 9%>
                         <%=pokemon.height / 10%> M
                    <% else %>
                         <%=pokemon.height * 10%> Cm
                    <% end %>
               </p>
               <p>weight: <%= pokemon.weight / 10%> Kg</p>
               <% pokemon.types.each do |type| %>
                    <p><%= link_to type.name, type_path(type) %></p>
               <%end%>
          </div>
     <%end%>
</div>

<%= paginate @pokemons %>